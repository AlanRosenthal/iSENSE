/*River as a classroom styles. Referred to in raac.php */

#raac-info label {

  width:160px;
  text-align:right;
  font-weight:bold;
  padding-right:10px;
  float:left;
}

#raac-info input {

  width:100px;
  margin-bottom: 10px;

}

#raac-info select {

  width:100px;
  margin-bottom: 10px;

}

#raac-info .hint {
  width: 480px;
  margin-left: 100px;
  text-align: left;
  position: relative;
  top: -5px;
  margin-bottom: 10px;
  float: left;
  font-size: 90%;
  color: #888888;
}

.raacFormLabel {
  width:200px;
  display:inline-block;
  text-align:right;
  font-weight:bold;
}

.raacSubmitButton {
  width:100%;
  display:inline-block;

}

#raacWrapper {
  width:500px;
}

/*End River as a Classroom styles. Referred to in raac.php */
